<body>
    <!--[if IE]>
    <p class="browserupgrade">Vous utilisez un navigateur <strong>obsolète</strong>. Merci de le <a href="https://browsehappy.com/">mettre à jour</a>.</p>
    <![endif]-->

    <div class="nav-container">
        <nav class="main-nav">
            <div class="navbar-header">
                <span class="main-title">
                    <b>ÉLECTIONS MUNICIPALES</b>
                </span>
                <span><b>Rennes 2020</b></span>
                <span class="bull">&bull;</span>
                <span>Comparateur de programmes</span>
            </div>
            <div class="copyright">Réalisé citoyennement par <a href="https://www.vincentogloblinsky.com"
                    target="_blank">Vincent
                    Ogloblinsky</a>&nbsp;&bull; &copy; 2020</div>
        </nav>

        <nav class="second-nav">
            <div>
                <label for="thematiques">Choisissez votre thématique</label>
                <select class="thematiques-selector" id="thematiques">
                    <option value="">Toutes les thématiques</option>
                    {{#each alldata.thematiques}}
                    <option value="{{this.id}}">
                        {{this.label}}
                    </option>
                    {{/each}}
                </select>
                <label for="sous-thematiques">Choisissez votre sous-thématique</label>
                <select class="thematiques-selector" id="sous-thematiques" disabled>
                    <option value="">Toutes les sous-thématiques</option>
                    {{#each alldata.sousthematiques}}
                    <option value="{{this.id}}">
                        {{this.label}}
                    </option>
                    {{/each}}
                </select>
            </div>
            <div class="second-nav__right">
                <div class="button disabled" data-direction="-1">
                    <ion-icon name="ios-arrow-back"></ion-icon>
                </div>
                <div class="button" data-direction="1">
                    <ion-icon name="ios-arrow-forward"></ion-icon>
                </div>
            </div>
        </nav>

        <nav class="candidats-list">
            {{#each alldata.candidats}}
            {{#if this.liste}}
            <header>
                <figure class="avatar">
                    <img src="assets/{{this.id}}_100.jpg" alt="{{this.liste}}" loading="lazy" width="100" height="100">
                </figure>
                <div class="candidat-infos">
                    <span class="liste">
                        {{this.liste}}
                    </span>
                    <span class="tetes">
                        {{#compare this.tetes.length 1 operator=">"}}
                        {{this.tetes.0.prenom}} {{this.tetes.0.nom}}<br />
                        {{this.tetes.1.prenom}} {{this.tetes.1.nom}}
                        {{else}}
                        {{this.tetes.0.prenom}} {{this.tetes.0.nom}}
                        {{/compare}}
                    </span>
                </div>
            </header>
            {{/if}}
            {{/each}}
        </nav>
    </div>

    <main class="main-container">
        <div class="candidats-wrapper">
            {{#each alldata.candidats}}
            {{#if this.liste}}
            <article>

                <div class="candidat-content">
                    {{#each this.orderedThematiques}}
                    <section data-thematique-id="{{this.id}}" class="thematique">
                        <h2>
                            <span>{{this.label}}</span>
                        </h2>
                        {{#each this.sous-thematiques}}
                        <section data-sous-thematique-id="{{this.id}}" class="sous-thematique">
                            <h3>{{this.label}}</h3>
                            <div class="proposition">
                                {{#each this.propositions}}
                                <p>{{this.label}}</p>
                                {{/each}}
                            </div>
                        </section>
                        {{/each}}
                    </section>
                    {{/each}}
                </div>
            </article>
            {{/if}}
            {{/each}}
        </div>
    </main>

    <script type="module" src="https://unpkg.com/ionicons@4.6.3/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule="" src="https://unpkg.com/ionicons@4.6.3/dist/ionicons/ionicons.js"></script>
    <script src="scripts/index.js" defer></script>

</body>

